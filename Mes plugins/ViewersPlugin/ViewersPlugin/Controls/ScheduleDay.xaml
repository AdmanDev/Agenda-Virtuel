<UserControl x:Class="ViewersPlugin.Controls.ScheduleDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewersPlugin.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" Width="250" BorderBrush="White" BorderThickness="1">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="White" Opacity="0.12"/>
        </Grid.Background>
        <StackPanel Orientation="Vertical">
            <Border BorderBrush="White" BorderThickness="1">
                <TextBlock x:Name="LB_Date" Text="Mercredi 29 décembre 2019" Foreground="White" FontSize="20" TextAlignment="Center" TextWrapping="Wrap">
                    <TextBlock.Background>
                        <SolidColorBrush Color="#FF363535" Opacity="0.45"/>
                    </TextBlock.Background>
                </TextBlock>
            </Border>

            <StackPanel x:Name="SP_Viewer" Orientation="Vertical" Margin="0, 3">
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
