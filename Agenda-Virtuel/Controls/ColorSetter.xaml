<UserControl x:Class="Agenda_Virtuel.Controls.ColorSetter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agenda_Virtuel.Controls"
             mc:Ignorable="d"  Margin="5" HorizontalAlignment="Left" Padding="5" x:ClassModifier="internal">
    <Border BorderBrush="White" BorderThickness="1">
        <StackPanel Orientation="Horizontal">
            <Border BorderBrush="White" BorderThickness="1">
                <Grid x:Name="Grid_Preview" Width="30" Height="30" Background="Black"/>
            </Border>
            <Button x:Name="BT_ChooseColor" Content="{Binding Path=CTitle, Mode=OneWay}" Style="{DynamicResource SecondaryButtonStyle}" Margin="5,0,0,0" Click="BT_ChooseColor_Click" />
        </StackPanel>
    </Border>
</UserControl>
