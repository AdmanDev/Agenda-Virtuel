<UserControl x:Class="Agenda_Virtuel.Windows.Shedule.ColorEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agenda_Virtuel.Windows.Shedule"
             mc:Ignorable="d" MinWidth="250"
             x:ClassModifier="internal" Margin="0, 3, 0, 0">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Label x:Name="LB_Subject" Content="Subject" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16" HorizontalAlignment="Left"/>
            <Button x:Name="BT_ChangeColor" Content="Changer la couleur" Margin="3" Style="{DynamicResource SecondaryButtonStyle}" Click="BT_ChangeColor_Click" HorizontalAlignment="Right"/>
        </Grid>
    </Border>
</UserControl>
