<Window x:Class="Agenda_Virtuel.Windows.ColorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agenda_Virtuel.Windows"
        xmlns:color="clr-namespace:Lovatts.ColorEditor;assembly=Lovatts.ColorEditor"
        mc:Ignorable="d"
        Title="ColorDialog" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" >
    <StackPanel Orientation="Vertical">
        <color:BrushEditor x:Name="editor"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="BT_OK" Content="OK" FontSize="20" Margin="0, 0, 5, 0" Padding="50,0" Click="BT_OK_Click"/>
            <Button x:Name="BT_Cancel" Content="Cancel" FontSize="16" Padding="10,0" Click="BT_Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
